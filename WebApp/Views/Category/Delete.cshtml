@model Category

<div class="d-flex justify-content-center">
    <form class="col-12 col-md-9" method="post">
        <input asp-for="Id" hidden/>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary text-center">
                    Delete category
                </h2>
                <hr />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder" class="p-0"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-md-4">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-12 col-md-4">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to list</a>
                </div>
            </div>
        </div>
    </form>
</div>