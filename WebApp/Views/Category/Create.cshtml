@model Category

<div class="d-flex justify-content-center">
    <form class="col-12 col-md-9" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary text-center">
                    Create new category
                </h2>
                <hr />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder" class="p-0"></label>
                <input asp-for="DisplayOrder" class="form-control" />
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-md-4">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-12 col-md-4">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to list</a>
                </div>
            </div>
        </div>
    </form>
</div>
