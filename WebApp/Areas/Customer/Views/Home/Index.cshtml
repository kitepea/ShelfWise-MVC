@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 p-3">
            <div class="card border-0 p-3 shadow border-top border-5 rounded">
                <img src="@product.ImageUrl" class="card-img-top rounded" />
                <div class="card-body pb-0">
                    <div>
                        <h5 class="card-title text-dark text-opacity-75 text-uppercase text-center">@product.Title</h5>
                        <h6 class="card-title text-warning text-center">by <b>@product.Author</b></h6>
                    </div>
                    <div>
                        <p class="text-dark text-opacity-75 text-center mb-0">
                            List Price:
                            <span class="text-decoration-line-through">
                                @product.ListPrice.ToString("c")
                            </span>
                        </p>
                    </div>
                    <div>
                        <p class="text-dark text-opacity-75 text-center">
                            As low as:
                            <span>
                                @product.Price100.ToString("c")
                            </span>
                        </p>
                    </div>
                </div>
                <div>
                    <a asp-action="Details"
                       asp-route-productId="@product.Id"
                       class="btn border-0 form-control text-white" style="background-color: #006cbe">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>