@model List<Product>

<style>
    .table td, .table th {
        padding: 5px;
        vertical-align: middle;
    }
</style>

<div class="card mx-auto shadow border-0 my-4 col-12 col-md-11">
    <div class="card-header p-0 bg-primary bg-gradient" style="background-color: #7885FF">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 fw-semibold text-white">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 pt-3 table-responsive">
        <div class="row pt-0 pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-square-fill"></i> Add new product
                </a>
            </div>
        </div>
        <table id="dataTable" class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}