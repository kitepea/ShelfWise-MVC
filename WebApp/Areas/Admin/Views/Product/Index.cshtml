@model List<Product>

<style>
    .table td, .table th {
        padding: 5px;
        vertical-align: middle;
    }
</style>

<div class="card mx-auto shadow border-0 my-4 col-12 col-md-11">
    <div class="card-header p-0 bg-primary bg-gradient" style="background-color: #7885FF">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 fw-semibold text-white">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 pt-3">
        <div class="row pt-0 pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-square-fill"></i> Add new product
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.Price</td>
                        <td>@obj.Author</td>
                        <td></td>
                        <td class="d-flex justify-content-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 ">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 ">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
