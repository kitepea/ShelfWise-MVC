@model Product

<div class="card mx-auto shadow border-0 my-4 col-12 col-md-9">
    <div class="card-header bg-danger p-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 fw-semibold text-white">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form class="row" method="post">
            <input asp-for="Id" hidden />
            <div class="p-2">
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating mb-4 col-12">
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow" placeholder="" ></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Author" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Price50" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Price100" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Price100" class="ms-2"></label>
                </div>

                <div class="row mt-3 justify-content-center">
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-12 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>