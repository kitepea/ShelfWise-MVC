@model Product

<div class="card mx-auto shadow border-0 my-4 col-12 col-md-9">
    <div class="card-header p-0" style="background-color: #5761be">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 fw-semibold text-white">
                    Edit Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form class="row" method="post">
            <input asp-for="Id" hidden />
            <div class="p-2">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow" placeholder="" ></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Price50" class="ms-2"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row mt-3 justify-content-center">
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-12 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary  form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
